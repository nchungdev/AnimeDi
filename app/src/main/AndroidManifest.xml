<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chun.anime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AnimeApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Otaku.Theme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/Otaku.Theme.NoActionBar" />
        <activity
            android:name=".ui.activity.SearchActivity"
            android:theme="@style/Otaku.Theme.NoActionBar" />
        <activity
            android:name=".ui.activity.AnimeActivity"
            android:theme="@style/Otaku.Theme.TransparentStatusBar" />
        <activity
            android:name=".ui.activity.MangaActivity"
            android:theme="@style/Otaku.Theme.TransparentStatusBar" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Otaku.Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>